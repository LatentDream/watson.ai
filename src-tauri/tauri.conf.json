{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Watson",
    "version": "1.6.0"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.github.com/LatentDream/499412394f62d1d311695bed37771e7a/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEyRjcwNzdFQTg2MjBFNjEKUldSaERtS29mZ2Yzb2o2c3kyZ3hVYjM1bkZaVm1INkJTeFZBUHJ0YStydFNwQ3BxcXBkamduNnMK"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": true
      }, 
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["msi", "dmg"],
      "identifier": "com.watson.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "bin/ffmpeg"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Watson",
        "width": 1000,
        "height": 800,
        "minWidth": 675,
        "minHeight": 575
      }
    ]
  }
}
